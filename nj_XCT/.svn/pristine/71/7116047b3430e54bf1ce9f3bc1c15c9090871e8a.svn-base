<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_preference_color" >

    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="5dp"
        android:layout_height="75dp"
        android:background="#FE7613" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/dbtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_marginRight="60dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dbtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dbtitle"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:drawableLeft="@drawable/timebxd"
            android:gravity="center_vertical"
            android:textColor="#ADADAD"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/statues_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/mspbxd"
        android:layout_marginRight="10dp" />

</RelativeLayout>