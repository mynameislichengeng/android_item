<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:height="0dp"
        android:text="全部" >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:height="0dp"
        android:text="工资" >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:height="0dp"
        android:text="奖金" >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:height="0dp"
        android:text="报销" >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:height="0dp"
        android:text="福利" >
    </TextView>

</LinearLayout>