<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/seque_preference_single_item"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/exchange_ll_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500MB流量"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/exchange_points_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="2000分"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/seque_preference_last_item"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="数量:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/reduce_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/num_et" />

        <EditText
            android:id="@+id/num_et"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/add_btn"
            android:background="#ffffff"
            android:inputType="number"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/add_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
 />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/seque_preference_last_item"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="需积分:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exchange_allpoints_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="2000分"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/gjq_relat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/seque_preference_last_item"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="需购机券:"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/exchange_allgjq_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="1张"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#000000"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>