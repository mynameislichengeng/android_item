<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/background_style"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/setting_margin_top" >

            <RelativeLayout
                android:id="@+id/notifylayout"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="@dimen/setting_margin_top"
                android:background="@drawable/list_selector"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/setting_notify_icon"
                    android:layout_width="@dimen/setting_icon_width"
                    android:layout_height="@dimen/setting_icon_width"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/setting_notify_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/setting_notify_icon"
                    android:text="@string/receive_notify_setting"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/profile_tab_arrow" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_margin_top"
                android:background="@color/white"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/modifypwdlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@drawable/list_selector"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/setting_modifypwd_icon"
                        android:layout_width="@dimen/setting_icon_width"
                        android:layout_height="@dimen/setting_icon_width"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/setting_modifypwd_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/setting_modifypwd_icon"
                        android:text="@string/modify_pwd"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/profile_tab_arrow" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/divider_line_color" >
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/feedbacklayout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@drawable/list_selector"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/setting_feedback_icon"
                        android:layout_width="@dimen/setting_icon_width"
                        android:layout_height="@dimen/setting_icon_width"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/setting_feedback_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/setting_feedback_icon"
                        android:text="@string/feedback"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/profile_tab_arrow" />
                </RelativeLayout>
                
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.6dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/divider_line_color" >
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/aboutlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/setting_item_height"
                    android:background="@drawable/list_selector"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/setting_about_icon"
                        android:layout_width="@dimen/setting_icon_width"
                        android:layout_height="@dimen/setting_icon_width"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/setting_about_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/setting_about_icon"
                        android:text="@string/about_us"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/desc"
                        android:src="@drawable/profile_tab_arrow" />
                </RelativeLayout>
            </LinearLayout>
            
            <Button 
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@drawable/delete_btn"
                android:id="@+id/logoutbtn"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="@dimen/setting_margin_top"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>