<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/background_style"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_margin_top"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/notifylayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/setting_item_height"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/notify_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center"
                android:text="@string/receive_message_notify"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/notify_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/butn_open" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:background="@color/divider_line_color" >
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/soundlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/setting_item_height"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/sound_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left|center"
                android:text="@string/sound"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/sound_btn"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/desc"
                android:src="@drawable/butn_close" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>