<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp">
    
    <TextView
        android:id="@+id/textViewVisitPlanCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="@color/black_gray"/>
    
    <TextView
        android:id="@+id/textViewVisitPlanTarget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/textViewVisitPlanCustom"
        android:textSize="14sp"
        android:textColor="@color/black_gray"/>

    <TextView 
        android:id="@+id/textViewVisitPlanContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewVisitPlanTarget"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black_gray"
        android:textSize="14sp"
        android:singleLine="true"
        android:typeface="monospace" />
    
    <TextView
        android:id="@+id/textViewVisitPlanStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textColor="@color/black_gray"/>
    
    <TextView
        android:id="@+id/textViewVisitPlanEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/textViewVisitPlanStartTime"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        android:textColor="@color/black_gray"/>
    
    <TextView
        android:id="@+id/textViewVisitPlanState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:textSize="14sp"
        android:textColor="@color/black_gray"/>
    
</RelativeLayout>