<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/operator_linear"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/operator_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="执行人:"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/operator_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/select_operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dip"
                android:background="@drawable/info_chooseperson_img" />
        </LinearLayout>

        <ImageView
            android:id="@+id/linearline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/operator_linear"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/execute_agent_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearline"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</ScrollView>