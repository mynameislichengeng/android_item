<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/info_save_quxiao"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/set_shape_top_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="是否保存草稿？"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <TextView
            android:id="@+id/info_save_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:background="#ffffff"
            android:text="保存"
            android:textColor="@color/blue_other"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <TextView
            android:id="@+id/info_save_nosave"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/set_shape_bottom_selector"
            android:padding="10dp"
            android:text="不保存"
            android:textColor="@color/blue_other"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/info_save_quxiao"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/set_shape_all_selector"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="取消"
        android:layout_marginBottom="10dp"
        android:textColor="#ff33b5e5"
        android:textSize="18sp" />

</RelativeLayout>