<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_radioGroup_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RadioGroup
        android:id="@+id/workplan_bottom_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_compose_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/personalPlan"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_selector_personal_workplan"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/departmentPlan"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_selector_department_workplan"
            android:button="@null" />
    </RadioGroup>

</LinearLayout>