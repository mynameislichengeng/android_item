<?xml version="1.0" encoding="utf-8"?>
<com.haoqee.chat.widget.ResizeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootlayout"
    style="@style/background_style"
    android:orientation="vertical" >

    <include layout="@layout/title_layout" />

    <com.haoqee.chat.widget.ResizeLayout
        android:id="@+id/listlayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/chat_main_list_msg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="@null"
            android:divider="@null"
            android:fadingEdge="none"
            android:fastScrollEnabled="true"
            android:focusable="true"
            android:listSelector="@drawable/transparent_selector"
            android:scrollbars="none" />
    </com.haoqee.chat.widget.ResizeLayout>

