<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_preference_color" >

    <RelativeLayout
        android:id="@+id/rel_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#eaeae9" >

        <ImageView
            android:id="@+id/iv_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/biaopan" />

        <TextView
            android:id="@+id/tvDetial"
            style="@style/black_normal_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/iv_01"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            android:paddingTop="3dp"
            
            android:text="dsda"
            android:textColor="#0085D0" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_03"
        android:layout_centerVertical="true"
        android:layout_margin="2dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <ImageView
                android:id="@+id/tipImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/payrolltip" />

            <ImageView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tipImg"
                android:src="@drawable/time" />

            <RelativeLayout
                android:id="@+id/rel_00"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/money" >

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="lo"
                    android:textSize="1sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv1"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:text="eeee"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/timeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/titleTv"
                    android:layout_below="@id/titleTv"
                    android:paddingTop="3dp"
                    android:text="kkkk"
                    android:textColor="#979797"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/moneyTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/bg_rightImg"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/bg_rightImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:src="@drawable/bg_right" />
    </RelativeLayout>

</RelativeLayout>