<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_background"
    android:layout_width="fill_parent"
    android:layout_height="30dip"
    android:background="@drawable/title_bg">
    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <RadioButton
            android:id="@+id/gzrz_radio"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_selector_organize"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="工作日志"
            android:textColor="@color/color_radiobutton1"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/grrz_radio"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_selector_attention"
            android:button="@null"
            android:gravity="center"
            android:text="个人日志"
            android:textColor="@color/color_radiobutton1"
            android:textSize="14sp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/title_leftImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="5dip"
        android:background="@drawable/back_btn"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/title_rightImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dip"
        android:background="@drawable/title_add_btn"
        android:visibility="gone" />

    <Button
        android:id="@+id/title_leftBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dip"
        android:onClick="titleLeftBtnClickListener"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone" >
    </Button>

    <Button
        android:id="@+id/title_leftBtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:onClick="titleLeftBtnClickListener"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone" >
    </Button>

    <Button
        android:id="@+id/title_leftBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_toRightOf="@id/title_leftBtn"
        android:onClick="titleLeftBtnClickListener"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone" >
    </Button>

    <Button
        android:id="@+id/title_leftBtnSend"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dip"
        android:onClick="titleLeftBtnClickListener"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone" >
    </Button>

    <TextView
        android:id="@+id/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxLines="2"
        android:shadowColor="#FF000000"
        android:shadowDx="0"
        android:shadowDy="-1.0"
        android:shadowRadius="2.5"
        android:textColor="#FFFFFFFF"
        android:textSize="19sp"
        android:textStyle="bold"
        android:visibility="gone" >
    </TextView>

    <Button
        android:id="@+id/title_rightBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:gravity="center_vertical"
        android:onClick="titleRightBtnClickListener"
        android:textColor="#FFFFFF"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:textSize="16sp"
        android:visibility="gone" >
    </Button>


    <Button
        android:id="@+id/title_rightBtnSend"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:onClick="titleRightBtnClickListener"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone" >
    </Button>

    <Button
        android:id="@+id/title_leftBtnSendRight"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dip"
        android:onClick="titleLeftBtnClickListener"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone" >
    </Button>

    <Button
        android:id="@+id/title_rightBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/title_rightBtn"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/title_rightBtnSend1"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dip"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:visibility="gone" >
    </Button>

</RelativeLayout>