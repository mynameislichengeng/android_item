<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_bottom_layout"
    android:layout_width="fill_parent"
    android:layout_height="48dip" 
    android:background="@drawable/bottom_bg">

    <RadioGroup
        android:id="@+id/groupContactBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >
        
		<RadioButton
            android:id="@+id/radioSelectPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_select_group_mana"
            android:button="@null"
            android:gravity="center"
            android:text="可选联系人"
            android:textSize="14sp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/radioGroupPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_select_group_person"
            android:button="@null"
            android:gravity="center"
            android:text="已有群组成员"
            android:textSize="14sp" />
    </RadioGroup>

</RelativeLayout>