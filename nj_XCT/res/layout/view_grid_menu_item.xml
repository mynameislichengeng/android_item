<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:gravity="center_vertical">
	<ImageView 
		android:id="@+id/menu_iconImg"
		android:layout_centerHorizontal="true"
		android:layout_height="68dip"
		android:layout_width="68dip"
		android:layout_marginTop="10px">
	</ImageView>
	<TextView android:layout_height="wrap_content"
		android:textSize="20sp"
		android:layout_width="fill_parent" android:id="@+id/menu_labelTv"
		android:lines="2" android:layout_below="@+id/menu_iconImg"
		android:ellipsize="marquee" android:textStyle="bold"
		android:gravity="center_horizontal"
		android:layout_marginBottom="10px"
		>
	</TextView>
	<LinearLayout android:id="@+id/menu_badgeFrame"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true" android:layout_marginTop="8dip"
		android:background="@drawable/menu_badge_bg1"
		android:visibility="gone">
		<TextView android:id="@+id/badgeTv"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:textSize="12sp"
			android:text="15" android:textColor="#FFFFFFFF"
			android:gravity="center">
		</TextView>
	</LinearLayout>
</RelativeLayout>


