<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white1" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:background="@drawable/ks_titile"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="123"
        android:textColor="#000000"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A、正确"
            android:checked="true"
            android:button="@drawable/onlineks_radiobutton_selector"
            android:textColor="@color/color_radiobutton1"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B、错误"
            android:button="@drawable/onlineks_radiobutton_selector"
            android:textColor="@color/color_radiobutton1"
            android:textSize="20sp" />
    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogroup"
       
        android:layout_marginTop="20dp" >

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
             android:background="@drawable/ctj_detail"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
             />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:background="@drawable/ctj_detail_icon" />

        <TextView
            android:id="@+id/detail_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/img1"
            android:layout_below="@+id/img2"
            android:paddingLeft="35dp"
            android:background="@drawable/ctj_detail"
            android:text="问题详解问题详解问题详解问题详解问题详解问题详解问题详解问题详解问题详解"
            android:textColor="#492315"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>