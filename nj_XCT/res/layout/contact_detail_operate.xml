<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="7dp" >


        <LinearLayout
            android:id="@+id/exit_layout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_above="@+id/contact_edit_cancle"
            android:layout_marginBottom="7dp"
            android:orientation="vertical" >
            
            <TextView
                android:id="@+id/add_group_btn1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="你想进行哪些设置?"
                android:background="@drawable/set_shape_top_selector"
                android:textColor="#8F8F8F"
                android:textSize="18sp" />
            
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
            
            <TextView
                android:id="@+id/add_group_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:text="加入分组"
                android:background="#ffffff"
                android:textColor="#0479FB"
                android:textSize="18sp" />

            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
            
            <TextView
                android:id="@+id/contact_share_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="#ffffff"
                android:text="分享"
                android:textColor="#0479FB"
                android:textSize="18sp" />

            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
                        <TextView
                android:id="@+id/contact_attention_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:background="#ffffff"
                android:text="关注"
                android:textColor="#0479FB"
                android:textSize="18sp" />
            <ImageView 
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/line"
                />
            
            <TextView
                android:id="@+id/contact_edit_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="编辑"
                android:background="@drawable/set_shape_bottom_selector"
                android:textColor="#0479FB"
                android:textSize="18sp" />
            
    </LinearLayout>
    
 			<TextView
                android:id="@+id/contact_edit_cancle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/set_shape_all_selector"
                android:gravity="center"
                android:text="取消"
                android:textColor="#0479FB"
                android:textSize="18sp" />
</RelativeLayout>