<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:scrollbars="none"
    android:fadingEdge="none"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
       <RelativeLayout
            android:id="@+id/app_memo_message"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            
           <TextView
                android:id="@+id/dataTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:lineSpacingExtra="5dp"
                android:gravity="right"
                android:textColor="@color/blue_other"
                android:textSize="20sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app_memo_message1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical" >
           
            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/schedule"/>

            <EditText
                android:id="@+id/content_str"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img"
                android:background="#ffffff"
                android:hint="请填日程内容"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textSize="17sp" />

        </RelativeLayout>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/preference_p"/>

        <RelativeLayout
            android:id="@+id/relative_to_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/choose_or_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/to_operator_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/choose_or_receiver"
                android:textColor="@color/gray_contact"
                android:padding="10dp"
                android:textSize="17sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/preference_p"/>
        <RelativeLayout
            android:id="@+id/relative_begin_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/starttimtTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="开始时间:"
                android:drawableLeft="@drawable/clock"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/begin_time_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/starttimtTv"
                android:textColor="@color/gray_contact"
                android:padding="10dp"
                android:textSize="17sp" />
        </RelativeLayout>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/preference_p"/>

        <RelativeLayout
            android:id="@+id/relative_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/endtimetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="结束时间:"
                 android:drawableLeft="@drawable/clock"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/end_time_str"
                android:layout_toRightOf="@+id/endtimetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_contact"
                android:padding="10dp"
                android:textSize="17sp" />
        </RelativeLayout>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/preference_p"/>

        <RelativeLayout
            android:id="@+id/relative_remind_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/alerttimetv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                 android:drawableLeft="@drawable/clock_alart"
                android:text="提醒时间:"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/remind_time_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/alerttimetv"
                android:textColor="@color/gray_contact"
                android:padding="10dp"
                android:textSize="17sp" />
        </RelativeLayout>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/preference_p"/>

        <RelativeLayout
            android:id="@+id/relative_complete_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="完成情况:"
                android:textColor="@android:color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/remind_complete_str"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/text1"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_contact"
                android:padding="10dp"
                android:textSize="17sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/preference_p"/>
        </RelativeLayout>
        

        <RelativeLayout
            android:id="@+id/relative_task_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:clickable="true"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/task_response_str"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="请填写任务反馈内容"
                android:textColor="@color/gray_contact"
                android:lines="3"
                android:gravity="left|top"
                android:maxLines="5"
                android:textSize="17sp" />
        </RelativeLayout>
        
         <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="60dp"
            android:background="@color/preference_p"/>
    </LinearLayout>

</ScrollView>