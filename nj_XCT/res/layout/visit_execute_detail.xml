<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        
	    <TextView
	        android:id="@+id/textViewVisitExecuteName1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="拜访客户："
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
	    <TextView
	        android:id="@+id/textViewVisitExecuteName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/textViewVisitExecuteName1"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
	    
        <TextView
	        android:id="@+id/textViewVisitExecuteTarget1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="拜访目的："
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
	    <TextView
	        android:id="@+id/textViewVisitExecuteTarget"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/textViewVisitExecuteTarget1"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
	    
        <TextView
	        android:id="@+id/textViewVisitExecuteContent1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="计划内容："
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
	    <TextView
	        android:id="@+id/textViewVisitExecuteContent"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/textViewVisitExecuteContent1"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        
        <TextView
	        android:id="@+id/textViewVisitExecuteStartTime1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="起始时间："
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
	    <TextView
	        android:id="@+id/textViewVisitExecuteStartTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/textViewVisitExecuteStartTime1"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
	    
        <TextView
	        android:id="@+id/textViewVisitExecuteEndTime1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="结束时间："
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
	    <TextView
	        android:id="@+id/textViewVisitExecuteEndTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/textViewVisitExecuteEndTime1"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
    </RelativeLayout>
    
        <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
	    
        <TextView
	        android:id="@+id/textViewVisitExecuteSignInTime1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="签到时间："
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
	    <TextView
	        android:id="@+id/textViewVisitExecuteSignInTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/textViewVisitExecuteSignInTime1"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
	    
        <TextView
	        android:id="@+id/textViewVisitExecuteLocation1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:text="当前位置："
	        android:textSize="18sp"
	        android:textColor="#000000"/>
        
	    <TextView
	        android:id="@+id/textViewVisitExecuteLocation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:layout_toRightOf="@+id/textViewVisitExecuteLocation1"
	        android:minLines="2"
	        android:textSize="18sp"
	        android:textColor="#000000"/>
	    
	    <ImageButton
	        android:id="@+id/imageButtonExecuteLocation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="4dp"
	        android:layout_centerVertical="true"
	        android:background="@drawable/iconmarka"/>
        
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativeVisitExecuteRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        
        <Button 
            android:id="@+id/buttonVisitExecuteRegister"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="签到"
            android:textSize="18sp"/>
        
        <Button
            android:id="@+id/buttonVisitExecuteSignOut"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="签退"
            android:textSize="18sp"
            android:layout_below="@+id/buttonVisitExecuteRegister"
            android:layout_marginTop="10dp"/>
        
    </RelativeLayout>

</LinearLayout>