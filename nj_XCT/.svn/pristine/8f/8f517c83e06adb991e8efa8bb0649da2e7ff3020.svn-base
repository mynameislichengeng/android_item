<?xml version="1.0" encoding="utf-8"?>
<!-- 表情布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_emotion"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/emotion_height"
    android:background="#ffffff"
    android:visibility="visible" >

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/face_btn_relativelayout"
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_height="55dp" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="#bfbfbf"/>

        <RadioGroup
            android:id="@+id/face_btn_layout"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/default_face"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/face_chang_bg"
                android:button="@null"
                android:gravity="center"
                android:textColor="#545454"
                android:textSize="18sp"
                android:text="表情" />

            <RadioButton
                android:id="@+id/moya_face_gif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/face_chang_bg"
                android:button="@null"
                android:gravity="center"
                android:visibility="gone" />

<!--                 android:drawableBottom="@drawable/face_button_1" -->
            <RadioButton
                android:id="@+id/stickerb_gif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/face_chang_bg"
                android:button="@null"
                android:text="动画"
                android:textColor="#545454"
                android:textSize="18sp"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/face_other"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/face_chang_bg"
                android:button="@null"
                android:gravity="center"
                android:visibility="gone" />
<!--                 android:drawableBottom="@drawable/face_button_3" -->

            <RadioButton
                android:id="@+id/face_others"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/face_chang_bg"
                android:button="@null"
                android:gravity="center"
                android:visibility="gone" />
<!--                 android:drawableBottom="@drawable/face_button_4" -->
        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/chat_face_point_loy"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/face_btn_relativelayout"
        android:gravity="center"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>